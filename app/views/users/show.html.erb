<% if signed_in? %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Image Profile:</strong>
    <% if @user.avatars[0].nil? %>
     <%= image_tag 'http://www.ccusersforum.org/images/user.png' , :align=> "middle",  class:"img-circle", :size => "260x180" %>
     <% else %>
      <%= image_tag(@user.avatars[0].url , :align=> "middle",  class:"img-circle", :size => "260x180")%>
    <% end %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>

  <p>
    <strong>First name:</strong>
    <%= @user.first_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= @user.age %>
  </p>

  <p>
    <strong>Gender:</strong>
    <%= @user.gender %>
  </p>


  <%= link_to 'Edit', edit_user_path(@user) %> |
<% else %>
<% end %>
  <%= link_to 'Back', root_path %>

