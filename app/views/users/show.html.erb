<% if signed_in? %>
  <p>
    <strong>Image Profile:</strong>
    <% if @user.avatars[0].nil? %>
      <%= image_tag 'http://www.ccusersforum.org/images/user.png' , :align=> "middle",  class:"img-circle", :size => "260x180" %>
    <% else %>
      <%= image_tag(@user.avatars[0].url , :align=> "middle",  class:"img-circle", :size => "260x180")%>
    <% end %>
  </p>
  <p>
    <strong>First name:</strong>
    <%= @user.first_name %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong>Age:</strong>
    <%= @user.age %>
  </p>
  <p>
    <strong>Gender:</strong>
    <%= @user.gender %>
  </p>
  <p>
    <strong>Total Coins Purchased:</strong>
    <%= @user.total_coins %>
  </p>

  <p>
    <strong>My Interests:</strong>
    <% @user_interests.each do |x| %>
    <li><%= x.name%></li>
    <% end %>
  </p>

  <p>
    <strong>I Speak:</strong>
    <% @user_teach_languages.each do |x| %>
    <li><%= x.name%></li>
    <% end %>
  </p>



  <ul class="list-group">
    <li class="list-group-item">
      <strong>Purchase Options</strong>
        <% if @chat.payments.where(status: :authorized).count == 0%>
          <%= link_to 'Buy 100 Coins Now' , new_payment_path + "?id=" + @chat.id.to_s, class: "btn btn-warning"  %>
        <% else %>
          <span class="btn btn-success">PAID</span>
        <% end %>
    </li>
  </ul>

  <%= link_to 'Edit', edit_user_path(@user) %> |
<% else %>
  <% redirect_to root_url %>
<% end %>
<%= link_to 'Back', root_path %>

