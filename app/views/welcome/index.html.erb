<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>
<% if signed_in? %>

	<% if @user.learn_languages.count == 0 %>
		<div id="empty-language-learn">
			<h1>What language you want to learn?</h1>
			<p>We still don't know what language you want to learn. Tick the following languages that you want to learn.</p>


			
		<%= form_tag(learn_path(current_user.id), method:"post", remote: true) do %>
English <%= check_box("learn", "languages", {:multiple => true}, "English", nil) %>
Spanish <%= check_box("learn", "languages", {:multiple => true}, "Spanish", nil) %>
Bahasa <%= check_box("learn", "languages", {:multiple => true}, "Bahasa", nil)%>

			<%= submit_tag('Submit')%>

			<% end %>


		</div>
	<% else %>
		<div id="language-learn">
			<h1>You want to learn:</h1>
			<ol>
				<% @learn_languages.each do |x| %>
					<li><%= x.name%></li>
				<% end %>
			</ol>
		</div>
	<!-- end for if learn language is nil -->
	<% end %>

	<% if @user_interest.count == 0%>
		<div id="empty-interest">
			<h1>What interest you?</h1>
			<p>Tick the following interest so that we can pair you up with people of similar interest!</p>
			<%= form_for @user do |form| %>
				<ul>
					<% @interests.each do |x| %>
						<li>
							<%= x.name %> 
							<%= check_box("user", "interests", {:multiple =>true }, x.name, nil) %>
						</li>
					<% end %>	
				</ul>
				<%= form.submit 'Submit'%>
		 	<% end %>
		</div>
	<% else %>
		<div id="user-interest">
			<h1>Your interest are:</h1>
			<ol>
				<% @user_interest.each do |x| %>
					<li><%= x.name%></li>
				<% end %>
			</ol>
		</div>
	<% end %>

<div id="host-a-chat">
	<h1>If you're ready, click here to start a chat!</h1>
	<%= link_to 'Chat!', host_path%>
</div>
	
<% else %>
<% end %>
