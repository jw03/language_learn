<%= form_for :session, url: session_path do |form| %>
  <%= link_to "Connect with Facebook", '/auth/facebook', :class => "like-btn like-btn--fb" %>
  <div class="signin-separator">
    <span class="signin-separator--text">or</span>
    <hr>
  </div>
  <div class="text-field">
    <%= form.text_field :email, type: 'email', placeholder: "Email", :class => "input-full-width" %>
  </div>
  <div class="password-field">
    <%= form.password_field :password, placeholder: "Password", :class => "input-full-width" %>
  </div>
  <%= link_to t(".forgot_password"), new_password_path, :class => "text-right" %>
  <div class="submit-field">
    <%= form.submit :class => "input-full-width full-width-input-primary"%>
  </div>
<% end %>