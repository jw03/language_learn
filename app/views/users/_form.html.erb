<%= form_for User.new do |form| %>

  <button class="btn btn-facebook"><b <i class="fa fa-facebook"></i> <%= link_to "| Signup with Facebook", '/auth/facebook' %> </b>

  </button>

  <div class="text-field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, type: 'first_name' %>
  </div>

  <div class="text-field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, type: 'last_name' %>
  </div>

  <div class="text-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email' %>
  </div>

  <%= radio_button("user", "gender", "Male") %>
  <%= label_tag(:gender, "Male") %>
  <%= radio_button("user", "gender", "Female") %>
  <%= label_tag(:gender, "Female") %>

  <div class="text-field">
    <%= form.label :age %>
    <%= form.number_field :age, type: 'integer' %>
  </div>

  <div class="password-field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="submit-field">
    <%= form.submit %>
  </div>
<% end %>