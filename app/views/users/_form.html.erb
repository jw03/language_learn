<div class="text-field">
  <%= form.text_field :first_name, type: 'first_name', placeholder: "First name", :class => "input-full-width" %>
</div>

<div class="text-field">
  <%= form.text_field :last_name, type: 'last_name',placeholder: "Last name", :class => "input-full-width" %>
</div>

<div class="text-field">
  <%= form.text_field :email, type: 'email',placeholder: "Email", :class => "input-full-width" %>
</div>

<%= radio_button("user", "gender", "Male") %>
<%= label_tag(:gender, "Male") %>
<%= radio_button("user", "gender", "Female") %>
<%= label_tag(:gender, "Female") %>

<div class="text-field">
  <%= form.number_field :age, type: 'integer', placeholder: "Age", :class => "input-full-width" %>
</div>

<div class="password-field">
  <%= form.password_field :password,placeholder: "Password", :class => "input-full-width" %>
</div>
<div class="submit-field">
  <%= form.submit :class => "input-full-width full-width-input-primary"%>
</div>

